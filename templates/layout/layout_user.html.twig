{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} | {{ page_prefix }} {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('user_app') }}
{% endblock %}

{% block body %}
    {% include "layout/components/page-loader.html.twig" %}

    <div class="layout-1 layout-vertical-1">
        <nav>
            <div class="nav-menu">
                <div class="nav-menu-header">
                    <a href="{{ path('app_homepage') }}" class="nav-menu-header-logo">
                        <img src="{{ asset('build/user/images/logo.png') }}" alt="logo">
                    </a>
                    <div class="btn-menu-mobile">
                        <button class="btn-icon"><span class="icon-close"></span></button>
                    </div>
                </div>
                <div class="nav-menu-items">
                    <div>
                        {% for item in menu %}
                            <a class="nav-menu-item {{- app.request.get('_route') in item.matchRoute ? " active" : "" -}}"
                               href="{{ item.path }}"
                            >
                                {% if item.icon is defined %}<span class="icon-{{ item.icon }}"></span>{% endif %}
                                <span>{{ item.name }}</span>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </nav>

        <div class="body">
            <header>
                <div>
                    <a href="{{ path('app_homepage') }}" class="header-logo">
                        <img src="{{ asset('build/user/images/logo.png') }}" alt="logo">
                    </a>
                </div>
                <div>
                    <a href="{{ path('user_profil_index') }}" class="avatar">
                        <img src="https://robohash.org/random" alt="avatar">
                        <span class="tooltip" style="width: 72px">Mon profil</span>
                    </a>
                    <div class="btn-menu-mobile">
                        <button class="btn-icon"><span class="icon-menu-1"></span></button>
                    </div>
                </div>
            </header>

            {% block breadcrumb %}
                {% include "layout/components/user/breadcrumbs.html.twig" %}
            {% endblock %}

            {% if page_title is defined %}
                {% include "layout/components/user/page_title.html.twig" %}
            {% endif %}

            <main>
                <div>
                    {% block main_content %}{% endblock %}
                </div>
            </main>
        </div>

        <footer>
            {% block footer %}{% endblock %}
        </footer>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('user_app') }}
{% endblock %}
