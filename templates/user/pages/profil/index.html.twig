{% extends 'user/pages/profil/template.html.twig' %}

{% set page_title %}{{ app.user.lastname }} {{ app.user.firstname }}{% endset %}
{% set page_subtitle %}Profil de {{ app.user.lastname }} {{ app.user.firstname }}{% endset %}

{% set page_actions %}
    {% include 'layout/components/tailwind/buttons/button.html.twig' with {
        btn_link: path('user_profil_update', {username: app.user.userIdentifier}),
        btn_type: 'blue',
        btn_icon: 'lock-1',
        btn_text: 'Modifier mes informations'
    } %}
{% endset %}

{% block main_content %}
    <div class="flex flex-col gap-6">
        <div class="relative bg-white shadow rounded-md px-4 py-6 mt-12">
            <div class="absolute -top-12 left-8">
                {% if app.user.avatarFile %}
                    <img class="w-36 rounded-md" src="{{ app.user.avatarFile }}" alt="Avatar utilisateur">
                {% else %}
                    <div class="w-56 rounded-md bg-gray-500 flex items-center justify-center font-semibold">
                        <div>
                            {{ app.user.lastname | slice(0, 1) }}{{ app.user.firstname | slice(0,1) }}
                        </div>
                    </div>
                {% endif %}
            </div>
            <div class="pl-44">
                <div class="font-semibold">
                    <span>{{ app.user.lastname }} {{ app.user.firstname }}</span>
                </div>
                <div class="text-gray-600 text-sm">ID : {{ app.user.userIdentifier }}</div>
            </div>
        </div>

        <div class="bg-white shadow rounded-md px-4 py-6 mt-12">
            <div class="font-semibold text-lg">DÃ©tails</div>
            <div class="mt-2">
                <div class="flex items-center gap-1">
                    <span class="icon-email"></span>
                    <div>{{ app.user.email }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
