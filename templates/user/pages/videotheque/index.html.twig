{% extends 'user/pages/videotheque/template.html.twig' %}

{% set page_title %}Vidéothèque{% endset %}
{% set page_subtitle %}Liste des vidéos{% endset %}

{% block main_content %}
<div class="flex justify-center gap-4 flex-wrap 2xl:justify-start qhd:gap-6">
    {% for elem in finder %}
        <a href="{{ path('user_videotheque_download', { filename: elem.filename }) }}" download
           class="bg-white rounded-md flex flex-col gap-2 w-full sm:w-72 md:w-80 xl:w-72 shadow-sm p-4 border hover:border-gray-300">
            <span class="font-medium break-words">{{ elem.filename }}</span>
            <span class="text-xs text-gray-600">{{ elem.size | sizeFormat }}</span>
        </a>
    {% endfor %}
</div>
{% endblock %}
