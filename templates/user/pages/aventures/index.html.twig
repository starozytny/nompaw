{% extends 'user/pages/aventures/template.html.twig' %}

{% set page_title %}Groupe d'aventures{% endset %}
{% set page_subtitle %}Liste des groupes d'aventures disponibles !{% endset %}

{% set page_actions %}
    {% include 'layout/components/tailwind/buttons/button.html.twig' with {
        btn_link: path('user_aventures_groupes_create'),
        btn_type: 'blue',
        btn_icon: 'add',
        btn_text: 'Ajouter un groupe'
    } %}
{% endset %}

{% block main_content %}
    {% if groupes | length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-6">
            {% for elem in groupes %}
                <div class="w-full bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden group">
                    <div class="relative h-48 overflow-hidden">
                        <img src="{{ asset(elem.imageFile) }}" alt="Image du groupe {{ elem.name }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                        {% if elem.isVisible == false %}
                            <div class="absolute top-3 right-3 bg-pink-500 text-white p-2 rounded-full">
                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        {% endif %}
                    </div>
                    <div class="p-5">
                        <div class="flex items-start justify-between mb-3">
                            <h3 class="text-xl font-semibold text-gray-900">{{ elem.name }}</h3>
                            <div class="flex -space-x-2">
                                {% if elem.links | length >= 5 %}
                                    <div class="w-8 h-8 rounded-full bg-blue-500 border-2 border-white flex items-center justify-center text-white text-xs font-medium">+5</div>
                                {% else %}
                                    {% for member in elem.links %}
                                        {% if member.user.avatarFile %}
                                            <img src="{{ asset(member.user.avatarFile) }}" alt="Avatar utilisateur" class="w-8 h-8 object-cover rounded-full">
                                        {% else %}
                                            <div class="w-8 h-8 rounded-full bg-blue-500 border-2 border-white flex items-center justify-center text-white text-xs font-medium">{{ member.user.lastname | slice(0, 1) }}</div>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                        <div class="text-gray-600 text-sm mb-4">{{ elem.description | raw }}</div>
                        <div class="flex items-center gap-2 mb-4">
                            {% set levelColors = [
                                'bg-gray-100 text-gray-700',
                                'bg-blue-100 text-blue-700',
                                'bg-green-100 text-green-700',
                                'bg-yellow-100 text-yellow-700',
                                'bg-red-100 text-red-700',
                                'bg-gray-800 text-gray-200'
                            ] %}
                            <span class="{{ levelColors[elem.level] }} px-3 py-1 rounded-full text-xs font-medium">Niveau : {{ elem.levelString }}</span>
                        </div>
                        <div class="flex gap-2">
                            {% if app.user.id == elem.author.id %}
                                <a href="{{ path('user_aventures_groupes_update', {slug: elem.slug}) }}"
                                   class="relative flex-1 bg-gray-50 hover:bg-gray-100 text-gray-700 py-2 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2"
                                >
                                    <span class="icon-pencil"></span>
                                    <span class="tooltip bg-gray-800 text-slate-50 py-1 px-2 rounded absolute -top-7 left-0 text-xs hidden">Modifier</span>
                                </a>
                                <div class="delete-groupe relative flex-1"
                                     data-context="groupes"
                                     data-id="{{ elem.id }}"
                                     data-name="{{ elem.name }}"
                                >
                                    <button class="relative w-full flex-1 bg-gray-50 hover:bg-red-50 text-gray-700 hover:text-red-600 py-2 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2">
                                        <span class="icon-trash"></span>
                                        <span class="tooltip bg-gray-800 text-slate-50 py-1 px-2 rounded absolute -top-7 right-2.5 text-xs hidden">Supprimer</span>
                                    </button>
                                </div>
                            {% endif %}
                            <a href="{{ path('user_aventures_groupes_read', {slug: elem.slug}) }}"
                               class="relative flex-1 bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2"
                            >
                                <span class="icon-right-arrow"></span>
                                <span class="tooltip bg-gray-800 text-slate-50 py-1 px-2 rounded absolute -top-7 right-0 text-xs hidden" style="width: 108px;">Accéder à la page</span>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="w-full flex flex-col items-center justify-center">
            <div>
                <div class="flex flex-col items-center justify-center bg-white p-12 rounded-xl shadow-sm">
                    <div class="bg-blue-100 rounded-lg p-3">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                    </div>
                    <div class="text-xl font-medium mt-4">Aucune aventure enregistrée</div>
                    <div class="max-w-sm text-gray-500 text-center mt-2">
                        Vous n'avez aucune aventure de créée. Commencez avec votre premier groupe pour y ajouter des aventures.
                    </div>
                    <div class="mt-4">
                        {% include 'layout/components/tailwind/buttons/button.html.twig' with {
                            btn_link: path('user_aventures_groupes_create'),
                            btn_type: 'blue',
                            btn_icon: 'add',
                            btn_text: 'Créer un groupe'
                        } %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
