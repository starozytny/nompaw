{% extends 'user/pages/holidays/template.html.twig' %}

{% set page_title %}Projets{% endset %}
{% set page_subtitle %}Liste des projets{% endset %}

{% set page_actions %}
    {% include 'layout/components/tailwind/buttons/button.html.twig' with {
        btn_link: path('user_projects_create'),
        btn_type: 'blue',
        btn_icon: 'add',
        btn_text: 'Ajouter un projet'
    } %}
{% endset %}

{% block main_content %}
<div class="flex justify-center gap-4 flex-wrap 2xl:justify-start qhd:gap-6">
    {% for elem in projects %}
        <div class="bg-white rounded-md w-full sm:w-72 md:w-80 xl:w-72 shadow-sm">
            <div class="p-4 border-b">
                <div class="font-medium">{{ elem.name }}</div>
            </div>
            <div class="relative cursor-pointer group overflow-hidden {{ app.user.id == elem.author.id ? '' : 'rounded-b-md' }}">
                <a href="{{ path('user_projects_read', {slug: elem.slug}) }}" class="bg-gray-800/15 absolute w-full h-full group-hover:opacity-0 transition-opacity"></a>
                <img src="{{ asset(elem.imageFile) }}" alt="Logo {{ elem.name }}" class="w-80 h-56 object-cover">
            </div>
            {% if app.user.id == elem.author.id %}
                <div class="relative z-10 flex justify-between divide-x py-2">
                    <div class="w-full text-center">
                        {% include 'layout/components/tailwind/buttons/button_icon.html.twig' with {
                            btn_link: path('user_projects_update', {slug: elem.slug}),
                            btn_type: 'transparent',
                            btn_icon: 'pencil',
                            btn_text: 'Modifier'
                        } %}
                    </div>
                    <div class="delete-project w-full text-center"
                         data-context="projects"
                         data-id="{{ elem.id }}"
                         data-name="{{ elem.name }}"
                    >
                        {% include 'layout/components/tailwind/buttons/button_icon.html.twig' with {
                            btn_link: "",
                            btn_type: 'transparent',
                            btn_icon: 'chart-3',
                            btn_text: 'Supprimer'
                        } %}
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>
{% endblock %}
