{% extends 'user/pages/holidays/template.html.twig' %}

{% set page_title %}Projets{% endset %}
{% set page_subtitle %}Liste des projets{% endset %}

{% set page_actions %}
    {% include 'layout/components/tailwind/buttons/button.html.twig' with {
        btn_link: path('user_projects_create'),
        btn_type: 'blue',
        btn_icon: 'add',
        btn_text: 'Ajouter un projet'
    } %}
{% endset %}

{% block main_content %}
    {% if projects | length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-6">
            {% for elem in projects %}
                <div class="w-full bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 cursor-pointer border border-slate-200">
                    <div onclick="location.href='{{ path('user_projects_read', {slug: elem.slug}) }}'">
                        <div class="relative h-48 overflow-hidden">
                            <img src="{{ asset(elem.imageFile) }}" alt="{{ elem.name }}" class="w-full h-full object-cover" />
                            <div class="absolute inset-0 bg-gradient-to-t from-black to-black/50 opacity-60"></div>

                            <div class="absolute bottom-3 left-3 text-white">
                                <h3 class="text-xl font-bold">{{ elem.name }}</h3>
                                <div class="flex items-center text-sm mt-1 opacity-90">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    </svg>
                                    <span>France</span>
                                </div>
                            </div>
                        </div>

                        <!-- Contenu -->
                        <div class="p-4">
                            <div class="flex items-center justify-between text-sm text-slate-600 mb-3">
                                <div class="flex items-center space-x-1">
                                    <span class="icon-calendar"></span>
                                    <span>{{ elem.startAt | date('d/m/Y') }}</span>
                                </div>
{#                                <div class="flex items-center space-x-1">#}
{#                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">#}
{#                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />#}
{#                                    </svg>#}
{#                                    <span>4 jours</span>#}
{#                                </div>#}
                            </div>

{#                            <div class="flex items-center justify-between text-sm">#}
{#                                <div class="flex items-center space-x-1 text-slate-600">#}
{#                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">#}
{#                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />#}
{#                                    </svg>#}
{#                                    <span>1 pers.</span>#}
{#                                </div>#}
{#                                <div class="text-right">#}
{#                                    <div class="font-semibold text-slate-800">120 €</div>#}
{#                                    <div class="text-xs text-slate-500">80% utilisé</div>#}
{#                                </div>#}
{#                            </div>#}
                        </div>
                    </div>

                    {% if app.user.id == elem.author.id %}
                        <div class="relative z-10 py-2 border-t flex justify-between divide-x">
                            <div class="w-full text-center">
                                {% include 'layout/components/tailwind/buttons/button_icon.html.twig' with {
                                    btn_link: path('user_projects_update', {slug: elem.slug}),
                                    btn_type: 'transparent',
                                    btn_icon: 'pencil',
                                    btn_text: 'Modifier'
                                } %}
                            </div>
                            <div class="delete-project w-full text-center"
                                 data-context="projects"
                                 data-id="{{ elem.id }}"
                                 data-name="{{ elem.name }}"
                            >
                                {% include 'layout/components/tailwind/buttons/button_icon.html.twig' with {
                                    btn_link: "",
                                    btn_type: 'transparent',
                                    btn_icon: 'chart-3',
                                    btn_text: 'Supprimer'
                                } %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="w-full flex flex-col items-center justify-center">
            <div>
                <div class="flex flex-col items-center justify-center bg-white p-12 rounded-xl shadow-sm">
                    <div class="bg-orange-100 rounded-lg p-3">
                        <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div class="text-xl font-medium mt-4">Aucun projet enregistré</div>
                    <div class="max-w-sm text-gray-500 text-center mt-2">
                        Vous n'avez aucun projet de créé. Commencez à ajouter votre premier projet voyage.
                    </div>
                    <div class="mt-4">
                        {% include 'layout/components/tailwind/buttons/button.html.twig' with {
                            btn_link: path('user_projects_create'),
                            btn_type: 'blue',
                            btn_icon: 'add',
                            btn_text: 'Créer un projet'
                        } %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
