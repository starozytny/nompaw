{% extends 'user/pages/budget/template.html.twig' %}

{% set page_title %}Planificateur de budget{% endset %}
{% set page_subtitle %}Planifie ton budget au cours de l'ann√©e{% endset %}

{% block main_content %}
    {% if app.user.budgetInit != null %}
        <div id="budget"
             data-donnees="{{ donnees }}"
             data-y="{{ year }}"
             data-m="{{ month }}"

        >
            {% include "layout/components/loader.html.twig" %}
        </div>
    {% else %}
        <div id="budget_init">
            {% include "layout/components/loader.html.twig" %}
        </div>
    {% endif %}
{% endblock %}
