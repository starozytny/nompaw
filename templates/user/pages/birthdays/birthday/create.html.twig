{% extends 'user/pages/birthdays/template.html.twig' %}

{% set page_title %}Création d'un anniversaire{% endset %}
{% set page_subtitle %}Ajoutez le maximum de détails à votre anniversaire !{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([{ text: page_title }]) %}
    {{ parent() }}
{% endblock %}

{% set page_actions %}
    {% include 'layout/components/tailwind/buttons/button.html.twig' with {
        btn_link: path('user_birthdays_index'),
        btn_type: 'default',
        btn_icon: 'left-arrow',
        btn_text: 'Retourner à liste'
    } %}
{% endset %}

{% block main_content %}
    <div id="birthdays_create">
        {% include "layout/components/tailwind/loaders/loader.html.twig" %}
    </div>
{% endblock %}
