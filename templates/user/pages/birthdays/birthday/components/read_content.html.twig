                            <div>{{ elem.description | raw }}</div>
                            <div class="iframe-route">{{ elem.iframeRoute | raw }}</div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="birthdays_presents"
                 data-birthday-id="{{ elem.id }}"
                 data-donnees="{{ presents }}"
                 data-user-id="{{ app.user ? app.user.id : null }}"
                 data-author-id="{{ elem.author.id }}"
