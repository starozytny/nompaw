{% extends 'user/pages/birthdays/template.html.twig' %}

{% set page_title %}Modifier : {{ elem.name }}{% endset %}
{% set page_subtitle %}Modifiez les informations de l'anniversaire : {{ elem.name }}.{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([{ text: page_title }]) %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    <div class="page-actions">
        <div class="col-1">
            <a href="{{ path('user_birthdays_index') }}" class="btn btn-outline-default">
                <span class="icon-left-arrow"></span>
                <span>Retourner Ã  liste</span>
            </a>
            <a href="{{ path('user_birthdays_read', {'slug': elem.slug}) }}" class="btn btn-outline-default">
                <span class="icon-left-arrow"></span>
                <span>Voir l'anniversaire</span>
            </a>
        </div>
        <div class="col-2"></div>
    </div>

    <div id="birthdays_update" data-element="{{ element }}">
        {% include "layout/components/tailwind/loaders/loader.html.twig" %}
    </div>
{% endblock %}
