{% extends 'user/pages/randos/template.html.twig' %}

{% set page_title %}Modifier : {{ elem.name }}{% endset %}
{% set page_subtitle %}Modifiez les informations de la randonnée : {{ elem.name }}.{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([
        { text: elem.groupe.name, url: path('user_randos_groupes_read', {'slug': elem.groupe.slug}) },
        { text: page_title }
    ]) %}
    {{ parent() }}
{% endblock %}

{% block main_content %}
    <div class="page-actions">
        <div class="col-1">
            <a href="{{ path('user_randos_groupes_read', {'slug': elem.groupe.slug}) }}" class="btn btn-outline-default">
                <span class="icon-left-arrow"></span>
                <span>Retourner à liste</span>
            </a>
            <a href="{{ path('user_randos_rando_read', {'slug': elem.slug}) }}" class="btn btn-outline-default">
                <span class="icon-left-arrow"></span>
                <span>Voir la randonnée</span>
            </a>
        </div>
        <div class="col-2"></div>
    </div>

    <div id="randos_update"
         data-element="{{ element }}"
         data-groupe-id="{{ elem.groupe.id }}"
    >
        {% include "layout/components/loader.html.twig" %}
    </div>
{% endblock %}
