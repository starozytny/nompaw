{% extends 'user/pages/recipes/template.html.twig' %}

{% set page_title %}Création d'un recette{% endset %}
{% set page_subtitle %}Ajoutez le maximum de détails à votre recette !{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([{ text: page_title }]) %}
    {{ parent() }}
{% endblock %}

{% set page_actions %}
    {% include 'layout/components/tailwind/buttons/button.html.twig' with {
        btn_link: path('user_recipes_index'),
        btn_type: 'default',
        btn_icon: 'left-arrow',
        btn_text: 'Retourner à liste'
    } %}
{% endset %}

{% block main_content %}
    <div id="recipes_create">
        {% include "layout/components/tailwind/loaders/loader.html.twig" %}
    </div>
{% endblock %}
