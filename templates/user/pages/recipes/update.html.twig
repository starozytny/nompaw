{% extends 'user/pages/recipes/template.html.twig' %}

{% set page_title %}Modifier : {{ elem.name }}{% endset %}
{% set page_subtitle %}Modifiez les informations de la recette : {{ elem.name }}.{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([{ text: page_title }]) %}
    {{ parent() }}
{% endblock %}

{% set page_actions %}
    {% include 'layout/components/tailwind/buttons/button.html.twig' with {
        btn_link: path('user_recipes_index'),
        btn_type: 'default',
        btn_icon: 'left-arrow',
        btn_text: 'Retourner Ã  liste'
    } %}
    {% include 'layout/components/tailwind/buttons/button.html.twig' with {
        btn_link: path('user_recipes_read', {slug: elem.slug}),
        btn_type: 'default',
        btn_icon: 'vision',
        btn_text: 'Voir la recette'
    } %}
{% endset %}

{% block main_content %}
    <div id="recipes_update"
         data-element="{{ element }}"
    >
        {% include "layout/components/tailwind/loaders/loader.html.twig" %}
    </div>
{% endblock %}
