{% extends 'user/pages/recipes/template.html.twig' %}

{% set page_title %}Modifier : {{ elem.name }}{% endset %}
{% set page_subtitle %}Modifiez les informations de la recette : {{ elem.name }}.{% endset %}

{% block breadcrumb %}
    {% set breadcrumbs = breadcrumbs | merge([{ text: page_title }]) %}
    {{ parent() }}
{% endblock %}

{% set full_width = true %}

{% block main_content %}
    <div class="page-actions">
        <div class="col-1">
            <a href="{{ path('user_recipes_index') }}" class="btn btn-outline-default">
                <span class="icon-left-arrow"></span>
                <span>Retourner Ã  liste</span>
            </a>
            <a href="{{ path('user_recipes_read', {'slug': elem.slug}) }}" target="_blank" class="btn btn-outline-default">
                <span class="icon-left-arrow"></span>
                <span>Voir la recette</span>
            </a>
        </div>
        <div class="col-2"></div>
    </div>

    <div id="recipes_update"
         data-element="{{ element }}"
         data-steps="{{ steps }}"
    >
        {% include "layout/components/loader.html.twig" %}
    </div>
{% endblock %}
