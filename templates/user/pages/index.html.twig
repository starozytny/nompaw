{% extends 'user/layout/layout.html.twig' %}

{% set page_title %}Dashboard{% endset %}
{% set page_subtitle %}Quelques raccourcis !{% endset %}

{% block main_content %}
<style>
    .card-hover {
        transition: all 0.3s ease;
    }
    .card-hover:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }
</style>

<div class="flex flex-col gap-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a href="{{ path('user_aventures_groupes_index') }}" class="bg-white rounded-xl shadow-lg p-6 card-hover cursor-pointer">
            <div class="flex items-center mb-4">
                <div class="bg-blue-100 rounded-lg p-3">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-800 ml-3">Aventures</h3>
            </div>
            <p class="text-gray-600 text-sm mb-4">Parcourez vos aventures et revivez vos moments à travers vos photos !</p>
            <div class="flex items-center text-blue-600 font-medium text-sm">
                <span>Voir les aventures</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </div>
        </a>

        <a href="{{ path('user_budget_index', {'year': 'now'|date('Y')}) }}" class="bg-white rounded-xl shadow-lg p-6 card-hover cursor-pointer">
            <div class="flex items-center mb-4">
                <div class="bg-green-100 rounded-lg p-3">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-800 ml-3">Budget</h3>
            </div>
            <p class="text-gray-600 text-sm mb-4">Gérez vos dépenses, recettes et suivez votre budget mensuel</p>
            <div class="flex items-center text-green-600 font-medium text-sm">
                <span>Gérer le budget</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </div>
        </a>

        <a href="{{ path('user_videotheque_index') }}" class="bg-white rounded-xl shadow-lg p-6 card-hover cursor-pointer">
            <div class="flex items-center mb-4">
                <div class="bg-purple-100 rounded-lg p-3">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-800 ml-3">Films</h3>
            </div>
            <p class="text-gray-600 text-sm mb-4">Accédez à votre collection de films et téléchargez vos favoris</p>
            <div class="flex items-center text-purple-600 font-medium text-sm">
                <span>Voir les films</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </div>
        </a>

        <a href="{{ path('user_projects_index') }}" class="bg-white rounded-xl shadow-lg p-6 card-hover cursor-pointer">
            <div class="flex items-center mb-4">
                <div class="bg-orange-100 rounded-lg p-3">
                    <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-800 ml-3">Voyages</h3>
            </div>
            <p class="text-gray-600 text-sm mb-4">Planifiez vos prochaines escapades et organisez vos itinéraires</p>
            <div class="flex items-center text-orange-600 font-medium text-sm">
                <span>Planifier un voyage</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </div>
        </a>

        <a href="{{ path('user_birthdays_index') }}" class="bg-white rounded-xl shadow-lg p-6 card-hover cursor-pointer">
            <div class="flex items-center mb-4">
                <div class="bg-pink-100 rounded-lg p-3">
                    <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-bold text-gray-800 ml-3">Anniversaires</h3>
            </div>
            <p class="text-gray-600 text-sm mb-4">Consultez les dates importantes et les idées de cadeaux</p>
            <div class="flex items-center text-pink-600 font-medium text-sm">
                <span>Voir les anniversaires</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </div>
        </a>

        <a href="{{ path('user_cryptos_index') }}" class="bg-white rounded-xl shadow-lg p-6 card-hover cursor-pointer">
            <div class="flex items-center mb-4">
                <div class="bg-indigo-100 rounded-lg w-12 p-3 flex justify-center items-center">
                    <span class="icon-credit-card text-indigo-600 !text-xl !font-semibold"></span>
                </div>
                <h3 class="text-lg font-bold text-gray-800 ml-3">Cryptomonnaies</h3>
            </div>
            <p class="text-gray-600 text-sm mb-4">Vue d'ensemble de vos cryptomonnaies</p>
            <div class="flex items-center text-indigo-600 font-medium text-sm">
                <span>Voir le échanges</span>
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </div>
        </a>
    </div>
</div>
{% endblock %}
