{% block main_content %}
<div class="login-page">
    <div class="col-1">
        <div class="title-page">
            <h1>Espace membre ðŸ”’</h1>
            <p>Renseignez votre identifiant et mot de passe pour accÃ©der Ã  votre espace.</p>
        </div>
    </div>

    <div class="homepage-section homepage-section-0">
        {% include 'app/layout/components/deco-0.html.twig' %}
        {% include 'app/layout/components/deco-1.html.twig' %}
        <div class="homepage-section-container">
            <form action="{{ path('app_login') }}" method="post" class="form-login">
                {% if error %}
                    <div class="flex flex-row gap-4 bg-red-50 text-red-700 rounded-md p-6 xl:p-4">
                        <div class="leading-5">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    </div>
                {% endif %}

                <div class="line">
                    <div class="form-group">
                        <label for="username">
                            <span class="icon-user"></span>
                            <span>Nom utilisateur</span>
                        </label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus/>
                    </div>
                </div>

                <div class="line">
                    <div class="form-group">
                        <label for="password">
                            <span class="icon-padlock"></span>
                            <span>Mot de passe</span>
                        </label>
                        <input type="password" name="_password" id="password" required />
                        <div class="input-show"><span class="icon-vision" id="password-icon"></span></div>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <input type="hidden" name="_target_path" value="{{ path('app_logged') }}"/>

                <div class="line">
                    <div id="forget"></div>
                </div>

                <div class="line-buttons">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                    <a href="{{ path('app_registration') }}" class="btn btn-outline-primary">Nous rejoindre</a>
                    <a href="{{ path('connect_google') }}" class="btn btn-outline-primary">Se connecter avec Google</a>
                    <a href="{{ path('connect_facebook') }}" class="btn btn-outline-primary">Se connecter avec Facebook</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
